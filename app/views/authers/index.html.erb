<h1>Authers</h1>
<%= form_with(url: authers_path, method: :get, local: true) do |form| %>
  <div>
    <%= form.label :search, "Search for auther:" %>
    <%= form.text_field :search %>
  </div>

  <div>
    <%= form.submit "Search" %>
  </div>
<% end %>

<ul>
  <% @authers.each do |auther| %>
    <li>
       <%= link_to auther.name, auther %>
    </li>
  <% end %>
</ul>
<%= link_to "New Auther", new_auther_path %>